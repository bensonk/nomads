<div id="new_suggestion">
  <h1>New Suggestion</h1>
  
  <% form_for @suggestion do |f| %>
    <%= f.error_messages %>
  
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :suggestion_type %><br />
      <%= f.text_field :suggestion_type %>
    </p>
    <p>
      <%= f.label :content %><br />
      <%= f.text_area :content %>
    </p>
    <p>
      <%= f.hidden_field :lat %>
      <%= f.hidden_field :lon %>
      <%= f.submit 'Create' %>
    </p>
  <% end %>
</div>
