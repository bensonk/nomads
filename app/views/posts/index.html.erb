<h1 class="scaffold">Listing posts</h1>

<table class="zebra">
  <tr>
    <th>Icon</th>
    <th>User</th>
    <th>Title</th>
    <th>Content</th>
    <th>Latitude</th>
    <th>Longitude</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%=image_tag("map_icons/blog.png") %></td>
    <td><%=h post.user_id %></td>
    <td><%=h post.title %></td>
    <td class="zebra_content"><%=h truncate(post.content, :length => 300) %></td>
    <td><%=h "%0.5f" % post.lat %></td>
    <td><%=h "%0.5f" % post.lon %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<div class="scaffold">
  <%= link_to 'New post', new_post_path %>
</div>
