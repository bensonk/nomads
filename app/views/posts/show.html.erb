<%= javascript_include_tag 'map_for_post' %>
<script type="text/javascript">
  var admin = <%= (@user and @user.admin?).to_json %>;
</script>

<div class="suggestion_text">
  <h2><%= link_to @post.title, @post %></h2>
  <div id="post_author">
    posted by <%=h @post.author or "unknown" %>
    <% if @user and @user.admin? %>
      <span class="edit_links">
        <%= link_to image_tag("edit.png"), edit_post_path(@post) %>
        <%= link_to image_tag("remove.png"), @post, :confirm => 'Are you sure?', :method => :delete %>
      </span>
    <% end %>
  </div>
  <div id="post_body">
    <%=textilize @post.content %>
  </div>

  <%= link_to 'All posts', posts_path %>
</div>

<div id="map_and_comment_container">
  <%= render :partial => "map" %>
  <%= render :partial => "comments/comment_list", :object => @post %>
</div>
