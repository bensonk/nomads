<tr>
  <td><%= link_to user.name, user %></td>
  <td><%= user.fullname %></td>
  <% if user.link and user.link != "" %>
    <td><%= link_to user.link, user.link %></td>
  <% else %>
    <td><%= user.link %></td>
  <% end %>
  <% if @user and @user.admin? %>
    <td><%= mail_to user.email %></td>
    <td><%= user.openid %></td>
  <% end %>
</tr>
