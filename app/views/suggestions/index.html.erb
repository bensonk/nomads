<h1>Listing suggestions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Content</th>
    <th>Lat</th>
    <th>Lon</th>
  </tr>

<% @suggestions.each do |suggestion| %>
  <tr>
    <td><%=h suggestion.name %></td>
    <td><%=h suggestion.suggestion_type %></td>
    <td><%=h suggestion.content %></td>
    <td><%=h suggestion.lat %></td>
    <td><%=h suggestion.lon %></td>
    <td><%= link_to 'Show', suggestion %></td>
    <td><%= link_to 'Edit', edit_suggestion_path(suggestion) %></td>
    <td><%= link_to 'Destroy', suggestion, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New suggestion', new_suggestion_path %>
