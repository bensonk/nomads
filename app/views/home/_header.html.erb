<div id="header_wrapper">
  <div id="header">
    <h1 style="display:none"> Nomads </h1>
    <a id="header-logo" href="/home"></a>
    <div id="login_status">
      <% if session[:user] %>
        Logged in as <%= link_to @user.nickname, { :controller => :openid, :action => :details } %><br/>
        <%= link_to "sign out", :controller => :openid, :action => :destroy %>
      <% else %>
        <%= link_to "sign in", { :controller => :openid }, :id => "sign_in" %>
      <% end %>
    </div>
    <ul id="navigation" class="no_dot_list">
      <li><a href="/home/about">About</a></li>
      <li><a href="/flickr">Photos</a></li>
      <% if @user and @user.admin? %>
        <li><%= link_to "Activity", activity_index_path %></li>
      <% end %>
      <li><a href="/map">Map</a></li>
      <li><a href="/home">Home</a></li>
    </ul>
  </div>
</div>

